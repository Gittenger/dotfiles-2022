{
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"files.autoSave": "off",
	"update.mode": "none",
	"debug.internalConsoleOptions": "neverOpen",
	"code-runner.runInTerminal": true,

	"window.newWindowDimensions": "inherit",
	"window.titleBarStyle": "custom",
	"window.zoomLevel": 1,

	"workbench.activityBar.visible": false,
	"workbench.iconTheme": "icyicons",
	"workbench.colorTheme": "Dracula",
	"workbench.colorCustomizations": {
		"titleBar.activeBackground": "#1d1e22",
		"titleBar.inactiveBackground": "#20232c",
		"titleBar.activeForeground": "#FFB86C",
		"titleBar.inactiveForeground": "#7a6c5c"
	},
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter.notebook.ipynb"
	},

	"explorer.compactFolders": false,

	"editor.fontFamily": "JetBrains Mono",
	"editor.fontSize": 18,
	"editor.fontLigatures": true,
	"editor.wordWrap": "on",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.minimap.enabled": false,
	"editor.cursorStyle": "line",
	"editor.insertSpaces": false,
	"editor.lineNumbers": "on",
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	"editor.tabSize": 3,
	"editor.renderWhitespace": "selection",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.columnSelection": false,

	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/package-lock.json": true,
		"**/.gitignore": true,
		"**/*.swp": true
	},

	"terminal.integrated.profiles.linux": {
		"zsh": {
			"path": "/usr/bin/zsh"
		}
	},
	"terminal.integrated.fontSize": 15,

	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.quickSuggestions": true,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[xml]": {
		"editor.defaultFormatter": "PrateekMahendrakar.prettyxml"
	},
	"[plaintext]": {
		"editor.quickSuggestions": false
	},

	"prettier.useTabs": true,
	"prettier.tabWidth": 1,
	"prettier.arrowParens": "avoid",
	"prettier.singleQuote": true,
	"prettier.semi": false,

	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"edge": "html"
	},
	"javascript.suggest.paths": false,
	"css.validate": false,
	"tailwindCSS.validate": true,
	"tailwindCSS.emmetCompletions": true,
	"path-autocomplete.extensionOnImport": true,
	"vim.smartRelativeLine": true,
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "~/.vimrc",

	"vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
	"vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim-vscode/init.vim",
	"python.autoComplete.extraPaths": [
		"/home/john/.local/share/miniconda3/bin/python"
	],
	"python.defaultInterpreterPath": "/usr/bin/python3",
	"python.languageServer": "Pylance",
	"python.analysis.extraPaths": ["/usr/local/lib/python3.8"]
}
